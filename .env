# =======================================================================================
# .env
# =======================================================================================

# Database Configuration
DB_URL=mysql+pymysql://root:password@127.0.0.1:3306/rfid_access_control
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# API Configuration  
API_DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Serial Communication
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD=115200
SERIAL_TIMEOUT=1

# Node Configuration (Set these based on your deployment)
NODE_ID=1
GATE_ID=1
BOOTH_ID=1
DEVICE_ID=1

# Synchronization
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5